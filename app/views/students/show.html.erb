<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
		<strong>First name:</strong>
		<%= @student.first_name %>
	</p>

	<p>
		<strong>Last name:</strong>
		<%= @student.last_name %>
	</p>

	<p>
		<strong>Email:</strong>
		<%= @student.email %>
	</p>

	<p>
		<strong>Phone:</strong>
		<%= @student.phone %>
	</p>

	<%= link_to 'Edit', edit_student_path(@student), class: "btn btn-link" %> |
	<%= link_to 'Back', students_path, class: "btn btn-link" %>

</div>